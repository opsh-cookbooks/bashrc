/var/log/bash_history/*.log {
    monthly
    missingok
    notifempty
    rotate 24
    copytruncate
    prerotate
        chattr -R -a /var/log/bash_history   
	#chmod 0755 /var/log/bash_history
    endscript
    postrotate
	#chmod 0757 /var/log/bash_history
        chattr -R +a /var/log/bash_history   
    endscript
    su root
}
